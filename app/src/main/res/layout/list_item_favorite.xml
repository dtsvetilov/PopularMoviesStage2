<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_content_vertical_padding"
    android:paddingLeft="@dimen/activity_content_horizontal_padding"
    android:paddingRight="@dimen/activity_content_horizontal_padding"
    android:paddingTop="@dimen/activity_content_vertical_padding">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:drawablePadding="@dimen/activity_content_horizontal_padding"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/movie_title_text_size"
        tools:text="Favorite Movie 1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginBottom="@dimen/divider_margin"
        android:layout_marginTop="@dimen/divider_margin"
        android:background="@color/colorPrimary" />
</LinearLayout>